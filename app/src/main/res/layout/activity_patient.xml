<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="emailOnClick">

    <TextView
        android:id="@+id/view_patient_email"
        android:layout_width="62dp"
        android:layout_height="23dp"
        android:layout_marginStart="174dp"
        android:layout_marginEnd="175dp"
        android:text="Email"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_patient_number" />

    <TextView
        android:id="@+id/view_patient_number"
        android:layout_width="62dp"
        android:layout_height="23dp"
        android:layout_marginStart="174dp"
        android:layout_marginEnd="175dp"
        android:text="Number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_patient_name" />
    <TextView
        android:id="@+id/view_patient_name"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="171dp"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_patient_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/PatientChangePasswordButton"
        android:layout_width="141dp"
        android:layout_height="98dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="236dp"
        android:onClick="changePasswordOnClick"
        android:text="change password"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/PatientLogoutButton" />

    <Button
        android:id="@+id/PatientLogoutButton"
        android:layout_width="141dp"
        android:layout_height="98dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="236dp"
        android:onClick="logoutOnClick"
        android:text="logout"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewPastPrescriptionBtn"
        android:layout_width="141dp"
        android:layout_height="98dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="360dp"
        android:onClick="onPastPrescriptionClick"
        android:text="View Past Prescriptions"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewNewPrescriptionBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewNewPrescriptionBtn"
        android:layout_width="141dp"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="360dp"
        android:onClick="onNewPrescriptionClick"
        android:text="View New Prescriptions"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewPastPrescriptionBtn"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>